# OpenAI API配置
# 您的OpenAI API密钥
OPENAI_API_KEY=your_openai_api_key_here
# OpenAI API的基础URL,默认为官方API地址
OPENAI_API_BASE=https://api.openai.com/v1
# 指定使用的OpenAI模型名称,例如: gpt-3.5-turbo, gpt-4 等
OPENAI_MODEL_NAME=gpt-3.5-turbo

# 自定义大模型服务配置
# 您的自定义模型API密钥
CUSTOM_MODEL_API_KEY=your_custom_model_api_key_here
# 您的自定义模型API端点
CUSTOM_MODEL_API_BASE=https://your-custom-model-api-endpoint.com/v1
# 您的自定义模型名称
CUSTOM_MODEL_NAME=your_custom_model_name_here

# 模型选择
# 设置为true时使用自定义模型,设置为false时使用OpenAI模型
USE_CUSTOM_MODEL=false

# 嵌入模型配置，默认使用bge-m3
EMBEDDING_MODEL=bge-m3
# 指定嵌入模型API端点，默认使用ollama服务
EMBEDDING_MODEL_API_BASE=http://localhost:11434
# 指定嵌入模型API密钥
EMBEDDING_MODEL_API_KEY=EMPTY

# 是否使用自定义嵌入模型,设置为true时使用ollama嵌入模型服务,设置为false时使用OpenAI嵌入模型
USE_CUSTOM_EMBEDDINGS=true

# 其他可选配置
# 控制生成文本的最大长度
MAX_TOKENS=1000
# 控制生成文本的创造性,值越高创造性越强,值越低则更保守
TEMPERATURE=0.7

# 文件上传路径
UPLOAD_FOLDER=./data/uploads

# 向量存储路径
VECTOR_STORE_PATH=./data/chroma_db   

# chainlit持久化存储文件
USER_SESSION_FILE=./data/user_session.json

# Tavily API密钥
TAVILY_API_KEY=your_tavily_api_key_here

